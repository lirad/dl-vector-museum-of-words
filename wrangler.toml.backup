name = "dl-vector-museum-of-words"
compatibility_date = "2024-09-23"
account_id = "b2e91a1d9b4ffc835b64e01c5f9bd3bd"

pages_build_output_dir = "dist"

# Build configuration for Cloudflare Pages
[[build]]
command = "npm run build"
cwd = "."
watch_dir = "src"

# Environment variables for build (if needed)
[vars]
NODE_VERSION = "18"

# Custom headers for better performance
[[headers]]
for = "/*"
[headers.values]
X-Frame-Options = "DENY"
X-Content-Type-Options = "nosniff"
Referrer-Policy = "strict-origin-when-cross-origin"

[[headers]]
for = "/assets/*"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
for = "*.js"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
for = "*.css"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
for = "*.png"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
for = "*.jpg"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
for = "*.svg"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"

# Redirect rules for SPA
[[redirects]]
from = "/*"
to = "/index.html"
status = 200
